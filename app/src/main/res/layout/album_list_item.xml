<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/song_list_item_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/song_list_item_height"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/song_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/empty_music" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/song_list_content_marginLeft"
        android:layout_weight="4">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/song_list_content_margin"
            android:layout_marginTop="@dimen/song_list_content_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Sugar" />

        <TextView
            android:id="@+id/song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_title"
            android:text="Maroon 5" />
    </RelativeLayout>

</LinearLayout>